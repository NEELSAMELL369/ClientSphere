generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  country    String?
  state      String?
  phone      String?
  role       Role     @default(SALES_EXECUTIVE)
  inviteCode String?  @unique
  isApproved Boolean  @default(false)
  createdAt  DateTime @default(now())
}

enum Role {
  ADMIN
  MANAGER
  SALES_EXECUTIVE
}
